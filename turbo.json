{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env.*", "**/.env"],
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "dev": {
      "persistent": true,
      "cache": false,
      "dotEnv": [
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ]
    },
    "lint": {
      "cache": false
    },
    "start": {
      "persistent": true,
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "db:push": {},
    "db:generate": {}
  }
}
